<Window x:Class="Komunikator.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Komunikator"

        mc:Ignorable="d"
        SizeToContent="Manual"
        ShowInTaskbar="True"
        Title="Logowanie"
        Height="350"
        Width="300">

    <Window.Resources>
        <ResourceDictionary>
            <Style TargetType="{x:Type Button}" x:Key="vanilla_button">
                <Setter Property="Margin" Value="5" />
                <Setter Property="Cursor" Value="Hand" />
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type Button}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </ResourceDictionary>
    </Window.Resources>


    <Window.WindowStyle>None</Window.WindowStyle>
    <Window.ResizeMode>NoResize</Window.ResizeMode>
    <Window.WindowStartupLocation>CenterScreen</Window.WindowStartupLocation>
    <Window.Background>
        <x:Null></x:Null>
    </Window.Background>
    <Window.AllowsTransparency>True</Window.AllowsTransparency>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--nagłówek-->
        <Border Background="#B26A994E" CornerRadius="15,15,0,0">
            <Grid Background="Transparent">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <Grid x:Name="grdHeader"
                      PreviewMouseLeftButtonDown="UIElement_OnPreviewMouseLeftButtonDown"
                      Background="Transparent">
                </Grid>

                <Grid Grid.Column="1" HorizontalAlignment="Right" Margin="0,0,20,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="{Binding ElementName=grdHeader, Path=ActualHeight}" />
                        <ColumnDefinition Width="{Binding ElementName=grdHeader, Path=ActualHeight}" />
                        <ColumnDefinition Width="{Binding ElementName=grdHeader, Path=ActualHeight}" />
                    </Grid.ColumnDefinitions>
                    <Button x:Name="btnMinimize" Click="btnMinimize_Click" Style="{StaticResource vanilla_button}">

                        <Viewbox>
                            <Image Source="/Images/icons8-minimize-window-96.png"></Image>
                        </Viewbox>
                    </Button>
                    <Button x:Name="btnMaximize" Style="{StaticResource vanilla_button}" Grid.Column="1"
                            Click="btnMaximize_Click">
                        <Viewbox>
                            <Image Source="/Images/icons8-maximize-window-96.png"></Image>
                        </Viewbox>
                    </Button>
                    <Button x:Name="btnClose" Style="{StaticResource vanilla_button}" Grid.Column="2"
                            Click="btnExit_Click">
                        <Viewbox>
                            <Image Source="/Images/icons8-close-window-96.png" RenderTransformOrigin="0.078,0.078"></Image>
                        </Viewbox>
                    </Button>
                </Grid>
            </Grid>
        </Border>

        <!--kod-->
        <Grid Row="1">
            <Border Background="#A7C957"

                    BorderBrush="#B36A994E"

                    BorderThickness="5,0,5,5">


                <Border.CornerRadius>0,0,0,15</Border.CornerRadius>


            </Border>


            <StackPanel HorizontalAlignment="Center"

                        VerticalAlignment="Center"

                        Margin="20"
                        Name="LoginStackPanel"
                        Visibility="Hidden">
                <TextBlock Text="Witaj!"

                           Foreground="#F3F9D2"

                           FontSize="26"

                           FontWeight="Bold"

                           Margin="0,0,0,20"

                           HorizontalAlignment="Center" />


                <StackPanel Orientation="Vertical">

                    <Label Content="Nazwa użytkownika:"

                           Foreground="#F3F9D2"

                           FontSize="10"

                           HorizontalAlignment="Left"

                           VerticalAlignment="Bottom"

                           Height="22" />

                    <local:RoundedTextBox Width="200"
                                          Height="30"
                                          x:Name="UserNameRoundedTxtBox"
                                          CornerRadius="0,5,0,5"
                                          Text="{Binding UserName, Mode=TwoWay}" Loaded="UserNameRoundedTxtBox_Loaded" />


                </StackPanel>


                <StackPanel Orientation="Vertical" Margin="0,0,0,0">

                    <Label Content="Hasło:"

                           Foreground="#F3F9D2"

                           FontSize="10"

                           HorizontalAlignment="Left"

                           VerticalAlignment="Bottom"

                           Height="22" />

                    <local:RoundedPasswordBox Width="200"
                                              Height="30"
                                              x:Name="UserPasswordRoundedTxtBox"
                                              CornerRadius="0,5,0,5" />


                </StackPanel>


                <StackPanel>
                    <local:RoundedButton Width="100"
                                         Height="30"
                                         ButtonContent="Login"
                                         CornerRadius="0,5,0,5"
                                         Background="#F3F9D2"
                                         BorderBrush="#6A994E"
                                         BorderThickness="3"
                                         FontSize="12"
                                         FontWeight="DemiBold"
                                         Foreground="#6A994E"
                                         Margin="0,10,0,0"
                                         Click="btnLogin_Click" />
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,5,0,0">
                    <Label Content="Resetuj hasło"
                           FontSize="8" FontWeight="DemiBold"
                           Foreground="#6A994E"
                           Cursor="Hand"
                           MouseDown="Label_ResetujHaslo_Click" />
                    <Label Content=" | "
                           FontSize="8" FontWeight="DemiBold"
                           Foreground="#6A994E"
                           Margin="5,0" />
                    <Label Content="Zarejestruj"
                           FontSize="8" FontWeight="DemiBold"
                           Foreground="#6A994E"
                           Cursor="Hand"
                           MouseDown="Label_Zarejestruj_Click" />
                </StackPanel>


            </StackPanel>

            <StackPanel Orientation="Horizontal" VerticalAlignment="Top" Margin="10">
                <Button Click="BackButton_Click">
                    <Image Source="/Images/arrow_left.png" Width="24" Height="24" />
                </Button>
            </StackPanel>
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Margin="20"
                        Name="RegisterStackPanel" Visibility="Visible">


                <StackPanel Orientation="Vertical">
                    <TextBlock Text="Dodaj konto!"

                               Foreground="#F3F9D2"

                               FontSize="16
                               "

                               FontWeight="Bold"

                               Margin="0,0,0,1
                               "

                               HorizontalAlignment="Center" />

                    <Label Content="Nazwa użytkownika:"

                           Foreground="#F3F9D2"

                           FontSize="10"

                           HorizontalAlignment="Left"

                           VerticalAlignment="Bottom"

                           Height="22" 
                           Margin="0,05,0,0"/>

                    <local:RoundedTextBox Width="200"
                                          Height="30"
                                          x:Name="UserNameRoundedTxtBoxRejestration"
                                          CornerRadius="0,0,0,5"
                                          Text="{Binding UserName, Mode=TwoWay}"
                                          Loaded="UserNameRoundedTxtBox_Loaded" />
                    <Label Content="E-mail:"

                           Foreground="#F3F9D2"

                           FontSize="10"

                           HorizontalAlignment="Left"

                           VerticalAlignment="Bottom"

                           Height="22" />

                    <local:RoundedTextBox Width="200"
                                          Height="30"
                                          x:Name="EmailRoundedTxtBoxRejestration"
                                          CornerRadius="0,5,0,5"
                                          Text="{Binding UserName, Mode=TwoWay}"
                                          Loaded="UserNameRoundedTxtBox_Loaded" />

                    <Label Content="Hasło:"

                           Foreground="#F3F9D2"

                           FontSize="10"

                           HorizontalAlignment="Left"

                           VerticalAlignment="Bottom"

                           Height="22" />

                    <local:RoundedPasswordBox Width="200"
                                              Height="30"
                                              x:Name="UserPasswordRoundedTxtBoxRejestration"
                                              CornerRadius="0,5,0,5" />

                    <Label Content="Powtórz hasło:"

                           Foreground="#F3F9D2"

                           FontSize="10"

                           HorizontalAlignment="Left"

                           VerticalAlignment="Bottom"

                           Height="22" />

                    <local:RoundedPasswordBox Width="200"
                                              Height="30"
                                              x:Name="UserPasswordRoundedTxtBoxRejestrationRepeat"
                                              CornerRadius="0,5,0,5" />
                    
                    <local:RoundedButton Width="100"
                                         Height="30"
                                         ButtonContent="Rejestracja"
                                         CornerRadius="0,5,0,5"
                                         Background="#F3F9D2"
                                         BorderBrush="#6A994E"
                                         BorderThickness="3"
                                         FontSize="12"
                                         FontWeight="DemiBold"
                                         Foreground="#6A994E"
                                         Margin="0,10,0,0"
                                         Click="btnRegister_Click" />
                </StackPanel>
            </StackPanel>
        </Grid>
    </Grid>
</Window>