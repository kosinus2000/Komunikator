<Window x:Class="Komunikator.ListWindow"
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Szablon"
        Height="500"
        Width="800"
        WindowStyle="None"
        ResizeMode="CanResize"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True"
        ShowInTaskbar="True"
        Background="{x:Null}">

    <Window.Resources>
        <ResourceDictionary>
            <Style TargetType="{x:Type Button}" x:Key="vanilla_button">
                <Setter Property="Margin" Value="5"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type Button}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </ResourceDictionary>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Nagłówek -->
        <Border Background="#B26A994E" CornerRadius="15,15,0,0">
            <Grid Background="Transparent">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <Grid x:Name="grdHeader"
                      PreviewMouseLeftButtonDown="UIElement_OnPreviewMouseLeftButtonDown"
                      Background="Transparent" />

                <Grid Grid.Column="1" HorizontalAlignment="Right" Margin="0,0,20,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="{Binding ElementName=grdHeader, Path=ActualHeight}" />
                        <ColumnDefinition Width="{Binding ElementName=grdHeader, Path=ActualHeight}" />
                        <ColumnDefinition Width="{Binding ElementName=grdHeader, Path=ActualHeight}" />
                    </Grid.ColumnDefinitions>
                    <Button x:Name="btnMinimize" Click="btnMinimize_Click" Style="{StaticResource vanilla_button}">
                        <Viewbox>
                            <Image Source="/Images/icons8-minimize-window-96.png" />
                        </Viewbox>
                    </Button>
                    <Button x:Name="btnMaximize" Style="{StaticResource vanilla_button}" Grid.Column="1" Click="btnMaximize_Click">
                        <Viewbox>
                            <Image Source="/Images/icons8-maximize-window-96.png" />
                        </Viewbox>
                    </Button>
                    <Button x:Name="btnClose" Style="{StaticResource vanilla_button}" Grid.Column="2" Click="btnExit_Click">
                        <Viewbox>
                            <Image Source="/Images/icons8-close-window-96.png" />
                        </Viewbox>
                    </Button>
                </Grid>
            </Grid>
        </Border>

        <!-- Miejsce na zawartość -->
        <Grid Grid.Row="1">
            <Border Background="#A7C957"
                    BorderBrush="#B36A994E"
                    BorderThickness="5,0,5,5"
                    CornerRadius="0,0,0,15">
                <!-- Tutaj można wstawić zawartość w przyszłości -->
                <ContentPresenter />
            </Border>
        </Grid>
    </Grid>
</Window>
