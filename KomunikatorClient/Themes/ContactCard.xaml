<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style TargetType="ListViewItem" x:Key="ContactCard">
        <Style.Triggers>
            <Trigger Property="IsSelected" Value="True">
                <Setter Property="Background" Value="#a3b18a">

                </Setter>
            </Trigger>
        </Style.Triggers>

        <Setter Property="Background"
                Value="#6B8F17">
        </Setter>

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ListViewItem">
                    <Border Background="{TemplateBinding Background}"
                            Height="50"
                            CornerRadius="4"
                            Margin="8,2,8,2">

                        <Grid Margin="10,0,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                                <Ellipse Width="30"
                                         Height="30">
                                    <Ellipse.Fill>
                                        <ImageBrush ImageSource="{Binding ImageSource}"/>
                                    </Ellipse.Fill>
                                </Ellipse>

                                <StackPanel VerticalAlignment="Center" Margin="5,0,0,0">
                                    <Label Content="{Binding Username}"
                                           Foreground="White"/>
                                    <Label Content="{Binding LastMessage}"
                                           Foreground="#F3F9D2"
                                           FontSize="10"/>
                                </StackPanel>
                            </StackPanel>

                            <Image Grid.Column="1" 
                                   Width="20"
                                   Height="20"
                                   RenderOptions.BitmapScalingMode="Fant"
                                   Source="../../Images/icons8-more-48.png"
                                   Margin="10,0,10,0" Opacity="0.5"
                                   HorizontalAlignment="Right"
                                   VerticalAlignment="Center"/>
                        </Grid>

                    </Border>
                </ControlTemplate>
            </Setter.Value>

        </Setter>

    </Style>
</ResourceDictionary>