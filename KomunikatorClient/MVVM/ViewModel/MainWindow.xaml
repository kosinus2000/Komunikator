<Window x:Class="KomunikatorClient.MVVM.ViewModel.ListWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:komunikatorClient="clr-namespace:KomunikatorClient"
        xmlns:viewModel="clr-namespace:KomunikatorClient.MVVM.ViewModel"
        xmlns:model="clr-namespace:KomunikatorClient.MVVM.Model"
        xmlns:view="clr-namespace:KomunikatorClient.MVVM.View"
        mc:Ignorable="d"
        Title="MyChat"
        Height="500"
        Width="800"
        Window.Icon="../../Images/ChatGPT Image 25 maj 2025, 11_46_26 (1).png"
        WindowStyle="None"
        ResizeMode="CanResizeWithGrip"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True"
        ShowInTaskbar="True"
        Background="{x:Null}">


    <Window.DataContext>
        <view:MainViewModel />
    </Window.DataContext>


    <Window.Resources>
        <ResourceDictionary>
            <Style TargetType="{x:Type Button}" x:Key="vanilla_button">
                <Setter Property="Margin"
                        Value="5" />
                <Setter Property="Cursor"
                        Value="Hand" />
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type Button}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center" />
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </ResourceDictionary>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Nagłówek -->
        <Border Background="#B26A994E"
                CornerRadius="15,15,0,0">
            <Grid Background="Transparent">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <Grid x:Name="grdHeader"
                      PreviewMouseLeftButtonDown="UIElement_OnPreviewMouseLeftButtonDown"
                      Background="Transparent">
                    <Label
                        Content="MyChat"
                        FontWeight="SemiBold"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Margin="10,0,0,0"
                        Foreground="#F2E8CF">
                    </Label>
                </Grid>

                <Grid Grid.Column="1" HorizontalAlignment="Right" Margin="0,0,20,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="{Binding ElementName=grdHeader, Path=ActualHeight}" />
                        <ColumnDefinition Width="{Binding ElementName=grdHeader, Path=ActualHeight}" />
                        <ColumnDefinition Width="{Binding ElementName=grdHeader, Path=ActualHeight}" />
                    </Grid.ColumnDefinitions>
                    <Button x:Name="btnMinimize" Click="btnMinimize_Click" Style="{StaticResource vanilla_button}">
                        <Viewbox>
                            <Image Source="/Images/icons8-minimize-window-96.png"
                                   Opacity="0.8" />
                        </Viewbox>
                    </Button>
                    <Button x:Name="btnMaximize" Style="{StaticResource vanilla_button}"
                            Grid.Column="1"
                            Click="btnMaximize_Click">
                        <Viewbox>
                            <Image Source="/Images/icons8-maximize-window-96.png"
                                   Opacity="0.8" />
                        </Viewbox>
                    </Button>
                    <Button x:Name="btnClose" Style="{StaticResource vanilla_button}"
                            Grid.Column="2"
                            Click="btnExit_Click">
                        <Viewbox>
                            <Image Source="/Images/icons8-close-window-96.png"
                                   Opacity="0.8" />
                        </Viewbox>
                    </Button>
                </Grid>
            </Grid>
        </Border>

        <!-- Miejsce na zawartość -->
        <Grid Grid.Row="1">
            <Border Background="#A7C957"
                    BorderBrush="#B36A994E"
                    BorderThickness="5,0,5,5"
                    CornerRadius="0,0,0,15">

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="250"></ColumnDefinition>
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>

                    <Grid Background="#98BE3E"
                          Margin="0,0,5,0"
                          Grid.Row="1">

                        <Grid.RowDefinitions>
                            <RowDefinition Height="40" />
                            <RowDefinition></RowDefinition>
                            <RowDefinition Height="60">
                            </RowDefinition>

                        </Grid.RowDefinitions>

                        <Border CornerRadius="5,5,5,5"
                                Margin="15,5,15,0"
                                BorderBrush="#B26A994E"
                                BorderThickness="3">

                            <Grid Background="#8BAF36">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <Label Grid.Column="0" Content="Kontakty"
                                       HorizontalAlignment="Left" 
                                       VerticalAlignment="Center" 
                                       FontWeight="Medium"
                                       Margin="5,0,0,0"
                                       Foreground="#386641"/>

                                <Image Grid.Column="1" Width="20"
                                       Height="20"
                                       Margin="0,0,7,0"
                                       HorizontalAlignment="Right"
                                       VerticalAlignment="Center" RenderOptions.BitmapScalingMode="Fant"
                                       Source="../../Images/icons8-add-48.png"
                                       Opacity="0.5" />
                            </Grid>
                        </Border>

                        <ListView ItemsSource="{Binding Contacts}"
                                  SelectedItem="{Binding SelectedContact}"
                                  Background="Transparent"
                                  BorderThickness="0"
                                  BorderBrush="#8BAF36"
                                  Grid.Row="1"
                                  ItemContainerStyle="{StaticResource ContactCard}"
                                  Margin="15,0,15,0"
                                  SelectionChanged="ListView_SelectionChanged">

                        </ListView>

                        <Grid Grid.Row="2" Background="#7EA328" >
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                                <Image Width="30"
                                       Height="30"
                                       Margin="15,0,0,0"
                                       VerticalAlignment="Center" 
                                       RenderOptions.BitmapScalingMode="Fant"
                                       Source="../../Images/icons8-male-user-64.png" />
                                <StackPanel VerticalAlignment="Center">
                                    <Label Content="Username"
                                           Foreground="#F2E8CF"
                                           FontWeight="SemiBold"
                                           Margin="0,-5,0,-5" />
                                    <Label Content="Custom Status"
                                           Foreground="White"
                                           FontWeight="Light" FontSize="10"
                                           Margin="0,-5,0,-5" />
                                </StackPanel>
                            </StackPanel>

                            <Image Grid.Column="1" 
                                   Width="20"
                                   Height="20"
                                   RenderOptions.BitmapScalingMode="Fant"
                                   Source="../../Images/icons8-more-48.png"
                                   Margin="10,0,10,0" Opacity="0.7"
                                   HorizontalAlignment="Right" VerticalAlignment="Center" />
                        </Grid>

                    </Grid>

                    <Grid Grid.Column="1"
                          Grid.Row="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="50" />
                            <RowDefinition />
                            <RowDefinition Height="80" />
                        </Grid.RowDefinitions>

                        <Border>
                            <Border Margin="5"
                                    CornerRadius="7"
                                    Background="#6B8F17">
                                <Grid HorizontalAlignment="Stretch">

                                    <Label Content="@Username"
                                           Foreground="#F2E8CF"
                                           FontWeight="Bold"
                                           Margin="5,0,5,0"
                                           VerticalAlignment="Center">
                                    </Label>

                                    <StackPanel Orientation="Horizontal"
                                                HorizontalAlignment="Right">
                                        <Image Width="20"
                                               Height="20"
                                               RenderOptions.BitmapScalingMode="Fant"
                                               Source="../../Images/icons8-more-48.png"
                                               Margin="10,0,10,0"
                                               Opacity="0.7" />

                                    </StackPanel>

                                </Grid>
                            </Border>
                        </Border>


                        <ListView ItemsSource="{Binding SelectedContact.Messages}"
                                  Background="Transparent"
                                  BorderThickness="0"
                                  ItemContainerStyle="{StaticResource ChatItem}"
                                  Margin="8,0,0,0"
                                  Grid.Row="1">

                        </ListView>

                        <Grid Grid.Row="2"
                              Margin="3,0,3,3">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition Width="80" />
                            </Grid.ColumnDefinitions>

                            <TextBox Grid.Row="1"
                                     Height="50"
                                     Text="Message @Username"
                                     Style="{StaticResource MessageBox}"
                                     Grid.ColumnSpan="2"
                                     Background="White">

                            </TextBox>

                            <StackPanel Orientation="Horizontal"
                                        HorizontalAlignment="Right"
                                        Grid.Column="1"
                                        Margin="0,0,16,0">

                                <Image Source="../../Images/icons8-add-48.png"
                                       Width="20"
                                       Height="20"
                                       RenderOptions.BitmapScalingMode="Fant"
                                       Margin="5,5,5,0" Opacity="0.7">

                                </Image>

                                <Image Source='../../Images/icons8-send-48.png'
                                       Width="20"
                                       Height="20"
                                       RenderOptions.BitmapScalingMode="Fant"
                                       Margin="5,5,5,0" Opacity="0.7">

                                </Image>

                            </StackPanel>

                        </Grid>
                    </Grid>

                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>