<UserControl x:Class="Komunikator.RoundedPasswordBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="40" Width="200">
    <Border Background="#F3F9D2"
            BorderBrush="#6A994E"
            BorderThickness="3"
            CornerRadius="{Binding CornerRadius, RelativeSource={RelativeSource AncestorType=UserControl}}">
        <PasswordBox x:Name="InnerPasswordBox"
                     Background="Transparent"
                     BorderThickness="0"
                     Padding="5,0,5,0"
                     VerticalAlignment="Center"
                     PasswordChanged="InnerPasswordBox_PasswordChanged"/>
    </Border>
</UserControl>